<?xml version="1.0" encoding="ISO-8859-1" ?>
<Simulator>
	<Name>Academic 3D</Name>
	<Description>
		A predefined, three dimensional academic function
	</Description>
	
	<!-- The input parameters -->
	<InputParameters>
		<Parameter name="x" type="real"/>
		<Parameter name="y" type="real"/>
		<Parameter name="z" type="real"/>
	</InputParameters>
		
	<!-- The output parameters -->
	<OutputParameters>
		<Parameter name="out" type="real"/>
	</OutputParameters>
	
	<!-- A simulator may have multiple implementations: as an executable, a 
	java main class, a dataset, ...-->
	<Implementation>
		
		<Executables>
			<Executable platform="matlab">Academic3DMatlab</Executable>
			<Executable platform="unix" arch="x86">Academic3D</Executable>
			<Executable platform="unix" arch="i386">Academic3D</Executable>
			<Executable platform="unix" arch="amd64">Academic3D</Executable>
			<Executable platform="windows" arch="x86">Academic3D.exe</Executable>
			<Executable platform="java" classpath="">ibbt.sumo.examples.Academic3DSimulator</Executable>
		</Executables>
		
		<DataFiles>
			<ScatteredDataFile id="default">Academic3DScattered</ScatteredDataFile>
			<ScatteredDataFile id="huge">Academic3DHugeScattered</ScatteredDataFile>
		</DataFiles>
	
	</Implementation>
</Simulator>

