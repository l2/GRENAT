<?xml version="1.0" encoding="ISO-8859-1" ?>
<Simulator>
	<Name>Mandelbrot</Name>
	<Description>
		Calculates how easy it is to classify a given point as being in the Mandelbrot set.
		Returns zero for values classified as being outside of the Mandelbrot set.
	</Description>
	
	<!-- The input parameters -->
	<InputParameters>
		<Parameter name="x" type="real"/>
		<Parameter name="y" type="real"/>
	</InputParameters>
		
	<!-- The output parameters -->
	<OutputParameters>
		<Parameter name="out" type="real"/>
	</OutputParameters>
		
	<!-- A simulator may have multiple implementations: as an executable, a 
	java main class, a dataset, ...-->
	<Implementation>
		
		<!-- Maybe add an attribute 'default' to identify the default platform to use? -->
		<Executables>
			
			<!-- An arch attribute may make sense here as well -->
			<Executable platform="java" classpath="">ibbt.sumo.examples.MandelbrotSimulator</Executable>
		</Executables>
		<DataFiles>
		</DataFiles>
	
	</Implementation>
</Simulator>

