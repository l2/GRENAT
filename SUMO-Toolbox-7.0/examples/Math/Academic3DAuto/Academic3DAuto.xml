<?xml version="1.0" encoding="ISO-8859-1" ?>
<Simulator>
	<Name>Academic 3D</Name>
	<Description>
		A predefined, three dimensional academic function that automatically samples the third dimension.
	</Description>
	
	<!-- The input parameters -->
	<InputParameters>
		<Parameter name="x" type="real"/>
		<Parameter name="y" type="real"/>
		<Parameter name="z" type="real" autoSampling="true" />
	</InputParameters>
		
	<!-- The output parameters -->
	<OutputParameters>
		<Parameter name="out" type="real"/>
	</OutputParameters>
	
	<!-- A simulator may have multiple implementations: as an executable, a 
	java main class, a dataset, ...-->
	<Implementation>
		
		<Executables>
			<Executable platform="unix" arch="x86" batch="true" batchSize="5">Academic3DAuto</Executable>
			<Executable platform="unix" arch="i386" batch="true" batchSize="5">Academic3DAuto</Executable>
			<Executable platform="unix" arch="amd64" batch="true" batchSize="5">Academic3DAuto</Executable>
			<Executable platform="windows" arch="x86" batch="true" batchSize="5">Academic3DAuto.exe</Executable>
			<Executable platform="matlab" arch="x86" batch="true" batchSize="5">Academic3DAutoMatlab</Executable>
		</Executables>
		
		<DataFiles>
			<ScatteredDataFile>Academic3DScattered</ScatteredDataFile>
		</DataFiles>
	
	</Implementation>
</Simulator>

