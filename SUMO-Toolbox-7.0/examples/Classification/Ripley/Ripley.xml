<?xml version="1.0" encoding="ISO-8859-1" ?>
<Simulator>
	<Name>Ripley</Name>
	<Description>
		The classic Ripley classification problem
	</Description>
	
	<!-- The input parameters -->
	<InputParameters>
		<Parameter name="xs" type="real" min="-1.2466" max="0.8614"/>
		<Parameter name="ys" type="real" min="-0.1914" max="1.0933"/>
	</InputParameters>
		
	<!-- The output parameters -->
	<OutputParameters>
		<Parameter name="yc" type="real" minimum="0" maximum="1"/>
	</OutputParameters>
		
	<Implementation>
			
		<DataFiles>
 			<ScatteredDataFile id="default">ripley.txt</ScatteredDataFile>
		</DataFiles>
		
	</Implementation>
</Simulator>

